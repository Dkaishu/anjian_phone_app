<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:binding="http://www.gueei.com/android-binding/"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/mainmenubg"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/loginUserName"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginRight="80dp"
        android:gravity="right|bottom"
        android:textColor="@color/blue"
        android:textSize="@dimen/NoticeTopTitleSize"
        android:visibility="gone" />

    <TextView
        android:id="@+id/lblSystemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="移动安检系统"
        android:textColor="@color/Logintext"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="70dp" >

        <Button
            android:id="@+id/btnDownload"
            android:layout_width="88dp"
            android:layout_height="99dp"
            android:layout_gravity="top|right"
            android:background="@drawable/xiazaibtnxml"
            android:gravity="right|top"
            android:textColor="@color/white"
            android:textSize="@dimen/NoticeTopTitleSize"
            binding:onClick="JobDown" />

        <Button
            android:id="@+id/btnUpload"
            android:layout_width="88dp"
            android:layout_height="99dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/shangchuanbtnxml"
            android:gravity="right|top"
            android:textColor="@color/white"
            android:textSize="@dimen/NoticeTopTitleSize"
            binding:onClick="UpLoad" />

        <Button
            android:id="@+id/btnSitting"
            android:layout_width="88dp"
            android:layout_height="99dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/shezhibtnxml"
            android:gravity="top|right|end"
            android:textColor="@color/white"
            android:textSize="@dimen/NoticeTopTitleSize"
            binding:onClick="Setup" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="304dp"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/lblDownload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="下载"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/lblUpload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="上传"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/lblSitting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="设置"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/btnNotice"
            android:layout_width="88dp"
            android:layout_height="99dp"
            android:background="@drawable/gonggaobtnbtnxml"
            android:gravity="right|top"
            android:textColor="@color/white"
            android:textSize="@dimen/NoticeTopTitleSize"
            binding:onClick="Notice" />

        <Button
            android:id="@+id/btnSafeCheckPlan"
            android:layout_width="88dp"
            android:layout_height="99dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/anjianbtnxml"
            android:gravity="right|top"
            android:textColor="@color/white"
            android:textSize="@dimen/NoticeTopTitleSize"
            binding:onClick="BigAddress" />

        <Button
            android:id="@+id/btnMySafeCheck"
            android:layout_width="88dp"
            android:layout_height="99dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/wodebtnxml"
            android:gravity="right|top"
            android:textColor="@color/white"
            android:textSize="@dimen/NoticeTopTitleSize"
            binding:onClick="MySecurity" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="304dp"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/lblNotice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:gravity="center_horizontal"
            android:text="公告信息"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/lblSafeCheckPlan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="10"
            android:gravity="center_horizontal"
            android:text="安检计划"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/lblMySafeCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="10"
            android:gravity="center_horizontal"
            android:text="我的安检"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="@dimen/Maingap" >

        <Button
            android:id="@+id/btnCustomizedPlan"
            android:layout_width="88dp"
            android:layout_height="99dp"
            android:background="@drawable/yonghubtnxml"
            android:gravity="right|top"
            android:textColor="@color/white"
            android:textSize="@dimen/NoticeTopTitleSize"
            binding:onClick="CustomPlan" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/lblCustomizedPlan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="定制计划"
            android:textColor="@color/black" />
    </LinearLayout>

</LinearLayout>